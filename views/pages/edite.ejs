<html>
    <%- include('./head'); %> 
<body>
    <div class="container">
        <div class="row align-items-center 
                    text-darkt min-vh-100">
            <div class="col-md-12 border border-warning p-3 border-3 rounded shadow-lg p-3 mb-5 bg-white rounded">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edite form</h5>
                    <a type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" href="/get"></a>
                </div>
                <form action="/update" class="form-horizontal" method="post" enctype="multipart/form-data">
                    <div class="mb-3 row">
                        <div class="col-12">
                            <label for="name" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Enter full name" value="<%= data.name %>">
                        </div>
                    </div>
                    
                    <div class="mb-3 row">
                        <div class="col-6">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" value="<%= data.email %>">
                        </div>
                        <div class="col-6">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" value="<%= data.password %>">
                        </div>
                    </div>
                    
                    <div class="mb-3 row">
                        <div class="col-6">
                            <label for="age" class="form-label">Age</label>
                            <input type="number" class="form-control" id="age" name="age" placeholder="Enter age" value="<%= data.age %>">
                        </div>
                        <div class="col-6">
                            <label for="dob" class="form-label">Date of Birth</label>
                            <input type="date" class="form-control" id="dob" name="dob" value="<%= data.dob.toISOString().split('T')[0] %>">
                        </div>
                    </div>
                    
                    <div class="mb-3 row">
                        <div class="col-6">
                            <label for="month" class="form-label">Month</label>
                            <input type="month" class="form-control" id="month" name="month" value="<%= data.month.getUTCFullYear().toString()+'-'+(data.month.getUTCMonth()+1).toString().padStart(2, '0') %>">
                        </div>
                        <div class="col-6">
                            <label for="time" class="form-label">Time</label>
                            <input type="time" class="form-control" id="time" name="time" value="<%= data.time %>">
                        </div>
                    </div>
                    
                    <div class="mb-3 row">
                        <div class="col-6">
                            <label for="datetime" class="form-label">Date & Time</label>
                            <input type="datetime-local" class="form-control" id="datetime" name="datetime" value="<%= data.datetime.toISOString().substr(0,16) %>">
                        </div>
                        <div class="col-6">
                            <label for="week" class="form-label">Week</label>
                            <input type="week" class="form-control" id="week" name="week" value="<%= data.week %>">
                        </div>
                    </div>
                    
                    <div class="mb-3 row">
                        <div class="col-6">
                            <label class="form-label">Gender</label><br>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="radio" id="male" value="male" <%= data.radio == "male" ? "checked" : "" %>>
                                <label class="form-check-label" for="male">Male</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="radio" id="female" value="female" <%= data.radio == "female" ? "checked" : "" %> >
                                <label class="form-check-label" for="female">Female</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <label for="color" class="form-label">Color</label>
                            <input type="color" class="form-control" id="color" name="color" value="<%= data.color %>">
                        </div>
                    </div>
                    
                    <div class="mb-3 row">
                        <div class="col-12">
                            <label for="range" class="form-label">Range</label>
                            <input type="range" class="form-range" id="range" name="range" value="<%= data.range %>"">
                        </div>
                    </div>
                    <input type="text" id="_id" name="_id" hidden value="<%= data._id %>">
                    <div class="mb-3 row">
                        <div class="col-12">
                            <label for="file" class="form-label">File Upload</label>
                            <input type="file" class="form-control" id="file" name="file" accept=".jpg,.jpeg" value="<%= data.file %>">
                        </div>
                    </div>
                    
                    <div class="mb-3 row">
                        <div class="col-12">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="checkbox" name="checkbox" <%= data.checkbox ? "checked" : "" %>>
                                <label class="form-check-label" for="checkbox">I agree to all conditions</label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3 row">
                        <div class="d-grid gap-2 col-6 mx-auto">
                            <button type="submit" class="btn btn-warning">Edite</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
</body>
</html>